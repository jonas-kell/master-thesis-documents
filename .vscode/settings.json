{
    "spellright.language": ["English (American)"],
    "spellright.documentTypes": ["markdown", "latex", "plaintext"],
    "files.exclude": {
        "**/*.fdb_latexmk": true,
        "**/*.fls": true,
        "**/*.log": true,
        "**/*.aux": true,
        "**/*.bcf": true,
        "**/*.out": true,
        "**/*.run.xml": true,
        "**/*.synctex.gz": true,
        "**/*.synctex(busy)": true,
        "**/*.toc": true,
        "**/*.bbl": true,
        "**/*.blg": true,
        "**/*-blx.bib": true,
        "**/*.nav": true,
        "**/*.snm": true,
        "**/_minted*": true
    },
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "--shell-escape", // added this flag
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-outdir=%OUTDIR%",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "--shell-escape", // added this flag
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": ["%DOCFILE%"],
            "env": {}
        }
    ],
    "cSpell.words": [
        "biblatex",
        "bibtex",
        "citecolor",
        "dblue",
        "displaymath",
        "Heyl",
        "Hurenkind",
        "Hurenkinder",
        "Kell",
        "Kolumnentitel",
        "libertinus",
        "linkcolor",
        "Markus",
        "pdfauthor",
        "pdfkeywords",
        "pdfs",
        "pdfsubject",
        "pdftitle",
        "Schusterjunge",
        "Schusterjungen",
        "siunitx",
        "urlcolor",
        "Witwe"
    ]
}
